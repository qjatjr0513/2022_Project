<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="30dp" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="50dp" android:text="위도" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
    <TextView android:textSize="20dp" android:id="@+id/Text1" android:layout_width="wrap_content" android:layout_height="50dp" android:ems="10" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:inputType="numberDecimal"/>
    <TextView android:textSize="20dp" android:id="@+id/Text2" android:layout_width="wrap_content" android:layout_height="50dp" android:ems="10" android:layout_alignLeft="@+id/Text1" android:layout_alignTop="@+id/textView2" android:inputType="numberDecimal"/>
    <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="30dp" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="50dp" android:layout_marginTop="22dp" android:text="경도" android:layout_below="@+id/Text1" android:layout_alignParentLeft="true"/>
    <Button android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="변환1" android:layout_alignBaseline="@+id/Text2" android:layout_alignBottom="@+id/Text2" android:layout_alignParentRight="true"/>
    <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="조회한 주소정보 출력" android:layout_below="@+id/Text2" android:layout_alignParentLeft="true" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
</RelativeLayout>
